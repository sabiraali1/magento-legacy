<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc.page_configuration">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/b-s-logo.png</argument>
                <argument name="logo_alt" xsi:type="string">Barker and Stonehouse</argument>
                <argument name="logo_img_width" xsi:type="number">125</argument>
                <argument name="logo_img_height" xsi:type="number">125</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="header">
            <arguments>
                <argument name="show_part" xsi:type="string">other</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="copyright" remove="false" />
        <referenceBlock name="header" remove="false" />
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="advanced-search-link" remove="true"/>
    </body>
</page>